package config

import (
    "os"
    "strconv"
)

type Config struct {
    Port        int
    UploadDir   string
}

func LoadConfig() (*Config, error) {
    port, err := strconv.Atoi(os.Getenv("APP_PORT"))
    if err != nil {
        return nil, err
    }
    return &Config{
        Port:        port,
        UploadDir:   os.Getenv("UPLOAD_DIR"),
    }, nil
}