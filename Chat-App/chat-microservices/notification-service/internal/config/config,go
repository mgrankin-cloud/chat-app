package config

import (
    "os"
    "strconv"
)

type Config struct {
    Port int
    // другие конфигурационные параметры, например, ключи API для отправки уведомлений
}

func LoadConfig() (*Config, error) {
    port, err := strconv.Atoi(os.Getenv("APP_PORT"))
    if err != nil {
        return nil, err
    }
    return &Config{
        Port: port,
        // загрузка других конфигурационных параметров
    }, nil
}