<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".CodeVerificationFragment">

    <!-- Поля для ввода кода подтверждения с рамками -->

    <TextView
        android:id="@+id/codeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"

        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/cardview_light_background"
        android:text="Пожалуйста, введите код, который был отправлен  Вам на email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toTopOf="parent"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/codeInputLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="20dp"
        app:boxStrokeColor="#46ADA4"
        app:boxCornerRadiusTopStart="8dp"
        app:boxCornerRadiusTopEnd="8dp"
        app:hintTextColor="@color/cardview_light_background"
        app:layout_constraintEnd_toStartOf="@id/codeInputLayout2"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/codeTextView">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/codeInput1"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:layout_marginLeft="30dp"
            android:textSize="22dp"
            android:maxLength="1"
            android:gravity="center"
            android:textColor="@color/cardview_light_background"
            android:textColorHint="#46ADA4"
            android:padding="10dp"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/codeInputLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="20dp"
        app:boxStrokeColor="#46ADA4"
        app:boxCornerRadiusTopStart="8dp"
        app:boxCornerRadiusTopEnd="8dp"
        app:hintTextColor="@color/cardview_light_background"
        app:layout_constraintTop_toBottomOf="@id/codeTextView"
        app:layout_constraintStart_toEndOf="@id/codeInputLayout1"
        app:layout_constraintEnd_toStartOf="@id/codeInputLayout3">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/codeInput2"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="1"
            android:gravity="center"
            android:textColor="@color/cardview_light_background"
            android:textColorHint="#46ADA4"
            android:textSize="22dp"
            android:padding="10dp"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/codeInputLayout3"
        android:layout_width="55dp"
        android:layout_height="wrap_content"

        android:layout_marginTop="20dp"
        app:boxCornerRadiusTopEnd="8dp"
        app:boxCornerRadiusTopStart="8dp"
        app:boxStrokeColor="#46ADA4"
        app:hintTextColor="@color/cardview_light_background"
        app:layout_constraintEnd_toStartOf="@id/codeInputLayout4"
        app:layout_constraintStart_toEndOf="@id/codeInputLayout2"
        app:layout_constraintTop_toBottomOf="@id/codeTextView">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/codeInput3"
            android:layout_width="50dp"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="22dp"
            android:padding="10dp"
            android:textColor="@color/cardview_light_background"
            android:textColorHint="#46ADA4" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/codeInputLayout4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="20dp"
        app:boxStrokeColor="#46ADA4"
        app:boxCornerRadiusTopStart="8dp"
        app:boxCornerRadiusTopEnd="8dp"
        app:hintTextColor="@color/cardview_light_background"
        app:layout_constraintTop_toBottomOf="@id/codeTextView"
        app:layout_constraintStart_toEndOf="@id/codeInputLayout3"
       app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/codeInput4"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="1"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:textColor="@color/cardview_light_background"
            android:textColorHint="#46ADA4"
            android:textSize="22dp"
            android:padding="10dp"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Кнопка для подтверждения кода -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/verifyButton"
        android:layout_width="0dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="wrap_content"
        android:text="Подтвердить"
        android:textStyle="bold"
        app:backgroundTint="@null"
        android:background="@drawable/button_gradient"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toBottomOf="@id/codeInputLayout4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
