<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#121212"/> <!-- Фон внутреннего текстового поля -->
            <stroke
                android:width="2dp"
                android:color="#46ADA4"/> <!-- Градиентная рамка при фокусе -->
            <corners android:radius="8dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#121212"/> <!-- Фон внутреннего текстового поля -->
            <stroke
                android:width="2dp"
                android:color="@android:color/transparent"/> <!-- Прозрачная рамка по умолчанию -->
            <corners android:radius="8dp"/>
        </shape>
    </item>
</selector>
